{
  "manifest_version": 3,
  "name": "치지직 클린 필터 & 자동 수령",
  "version": "1.0",
  "description": "채팅 필터링 및 통나무 자동 수령",
  "permissions": ["storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chzzk.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}