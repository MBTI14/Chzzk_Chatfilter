{
  "manifest_version": 3,
  "name": "Chzzk Chatfilter v1.0",
  "version": "1.0",
  "description": "채팅 필터링 및 편의 기능 제공",
  "permissions": ["storage", "contextMenus"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chzzk.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
